<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
    <RootNamespace>Genius.PriceChecker.UI</RootNamespace>
    <AssemblyName>PriceChecker</AssemblyName>
    <OutputPath>..\build\</OutputPath>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>DEBUG</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Resource Include="Assets\Logo.ico" />
    <Resource Include="Assets\*.png" />
    <Resource Include="Assets\*.gif" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PriceChecker.Core\PriceChecker.Core.csproj" />
    <ProjectReference Include="..\PriceChecker.Infrastructure\PriceChecker.Infrastructure.csproj" />
    <ProjectReference Include="..\PriceChecker.UI.Forms\PriceChecker.UI.Forms.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Hardcodet.NotifyIcon.Wpf">
      <HintPath>..\libs\Hardcodet.NotifyIcon.Wpf.dll</HintPath>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Reactive" />
    <PackageReference Include="ReactiveUI" />
    <PackageReference Include="Humanizer.Core" />
    <PackageReference Include="MahApps.Metro" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <!--
      TODO: Switch back to the nuget reference when it become available with support of net5.0
      <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" /> -->
  </ItemGroup>
</Project>
